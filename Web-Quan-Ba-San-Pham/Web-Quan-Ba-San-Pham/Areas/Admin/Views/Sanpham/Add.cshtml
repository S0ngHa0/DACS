@model Web_Quan_Ba_San_Pham.Models.Models1.tb_Sanpham
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/Sanpham" class="nav-link">Sản phẩm</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Thêm sản phẩm</a>
        </li>
    </ul>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm mới sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Sản phẩm</a></li>
                    <li class="breadcrumb-item active">Thêm</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin</h3>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Add", "Sanpham", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <!-- your steps content here -->
                    <div class="form-group">
                        <label for="exampleInputEmail1">Tên sản phẩm</label>
                        @Html.TextBoxFor(x => x.Tieude, new { @class = "form-control", @placeholder = "Tên sản phẩm" })
                        @Html.ValidationMessageFor(x => x.Tieude, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputFile">Hình ảnh</label>
                        <div class="input-group">
                            <div class="custom-file">
                                @Html.TextBoxFor(x => x.Hinhanh, new { @id = "txtHinhanh", @class = "form-control" })
                            </div>
                            <div class="input-group-append">
                                <input type="button" value="Tải ảnh" onclick="BrowseServer('txtHinhanh');" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Mã sản phẩm</label>
                        @Html.TextBoxFor(x => x.Masanpham, new { @class = "form-control", @placeholder = "Mã mã phẩm" })
                        @Html.ValidationMessageFor(x => x.Masanpham, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Danh mục</label>
                        @Html.DropDownListFor(x => x.IdLoaisp, ViewBag.LoaiSp as SelectList, "-Chọn danh mục sản phẩm-", new { @class = "form-control", @placeholder = "Mã mã phẩm" })
                        @Html.ValidationMessageFor(x => x.IdLoaisp, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Mô tả</label>
                        @Html.TextAreaFor(x => x.Mota, new { @class = "form-control", @placeholder = "Mô tả" })
                        @Html.ValidationMessageFor(x => x.Mota, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Số lượng</label>
                        @Html.TextBoxFor(x => x.Soluong, new { @class = "form-control", @Value = "1" })
                        @Html.ValidationMessageFor(x => x.Soluong, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Giá bán</label>
                        @Html.TextBoxFor(x => x.Gia, new { @class = "form-control", @Value = "" })
                        @Html.ValidationMessageFor(x => x.Gia, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Giá khuyến mãi</label>
                        @Html.TextBoxFor(x => x.Giamgia, new { @class = "form-control", @Value = "" })
                        @Html.ValidationMessageFor(x => x.Giamgia, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Giá nhập</label>
                        @Html.TextBoxFor(x => x.Giagoc, new { @class = "form-control", @Value = "" })
                        @Html.ValidationMessageFor(x => x.Giagoc, null, new { @class = "text-danger" })
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <div class="form-group">
                                <div class="custom-control custom-checkbox">
                                    @Html.CheckBoxFor(x => x.Trangthai, new { @class = "custom-control-input", @id = "customCheckbox2", @checked = "checked" })
                                    <label for="customCheckbox2" class="custom-control-label">Hiển thị</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <div class="custom-control custom-checkbox">
                                    @Html.CheckBoxFor(x => x.SpHot, new { @class = "custom-control-input", @id = "IsHotCheckbox2" })
                                    <label for="IsHotCheckbox2" class="custom-control-label">Hot</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <div class="custom-control custom-checkbox">
                                    @Html.CheckBoxFor(x => x.SpTuonglai, new { @class = "custom-control-input", @id = "IsFeatureCheckbox" })
                                    <label for="IsFeatureCheckbox" class="custom-control-label">Nổi bật</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <div class="custom-control custom-checkbox">
                                    @Html.CheckBoxFor(x => x.SpSale, new { @class = "custom-control-input", @id = "IsSaleCheckbox" })
                                    <label for="IsSaleCheckbox" class="custom-control-label">Khuyến mãi</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <a href="/admin/sanpham" class="btn btn-danger">Quay lại</a>
                        <button type="submit" class="btn btn-success">Thêm mới</button>
                    </div>
                }

            </div>
        </div>
    </div>

</section>
@section  scripts{
    <script>
        $(document).ready(function () {
            CKEDITOR.replace('txtChitiet', {
                customConfig: '/content/ckeditor/config.js',
                extraAllowedContent: 'span',
            });
        });
        function BrowseServer(field) {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                document.getElementById(field).value = fileUrl;
            };
            finder.popup();
        }

    </script>
}

