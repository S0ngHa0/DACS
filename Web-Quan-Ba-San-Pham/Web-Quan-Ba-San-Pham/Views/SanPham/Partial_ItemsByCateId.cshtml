@model IEnumerable<Web_Quan_Ba_San_Pham.Models.Models1.tb_Sanpham>
@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        <!-- Product 1 -->
        var strImge = "";
        var img = item.Hinhanh;
        if (img != null)
        {
            strImge = img;
        }
        <div class="product-item @item.LoaiSp">
            <div class="product discount product_filter">
                <div class="product_image">
                    <img src="@strImge" alt="@item.Tieude">
                </div>
                <div class="favorite favorite_left"></div>
                @if (item.Giamgia > 0)
                {
                    <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>sale</span></div>
                }
                @* <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>-$20</span></div>*@
            <div class="product_info">
                <h6 class="product_name"><a href="@item.Id">@item.Tieude</a></h6>
                @if (item.Giamgia > 0)
                {
                    <div class="product_price">@item.Giamgia, 0<span>@item.Gia, 0</span></div>

                }
                else
                {
                    <div class="product_price">@item.Gia</div>
                }
            </div>
            </div>
            <div class="red_button add_to_cart_button"><a href="#" class="btnAddToCart" data-id="@item.Id">Thêm Giỏ Hàng</a></div>
        </div>
    }
}
